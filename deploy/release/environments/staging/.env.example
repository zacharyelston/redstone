# Staging Environment Configuration
# Following the "Built for Clarity" design philosophy

# Environment
ENVIRONMENT=staging
NODE_ENV=production
DEBUG=false

# Service Ports
FRONTEND_PORT=8080
API_PORT=8081
REDMICA_PORT=3000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090
REDIS_PORT=6379

# Database Configuration
POSTGRES_PASSWORD=staging_postgres_password_change_me
POSTGRES_VERSION=15

# Service Versions
REDMICA_VERSION=3.1.7
NGINX_VERSION=1.25-alpine
REDIS_VERSION=7-alpine
GRAFANA_VERSION=9.5.2
PROMETHEUS_VERSION=v2.44.0

# API Configuration
API_DEBUG=false
API_SECRET_KEY=staging_api_secret_key_change_me

# Worker Configuration
WORKER_REPLICAS=2
WORKER_ID=staging-worker

# LDAP Configuration
LDAP_ADMIN_PASSWORD=staging_ldap_admin_change_me
LDAP_CONFIG_PASSWORD=staging_ldap_config_change_me

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=staging_grafana_admin_change_me

# Release.com Configuration
RELEASE_API_TOKEN=your_staging_token_here
RELEASE_PROJECT_NAME=redstone-staging
RELEASE_ENVIRONMENT=staging

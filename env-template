# Redstone Environment Template for Release.com
# Following the "Built for Clarity" design philosophy

# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=__POSTGRES_PASSWORD__
POSTGRES_DB=redmica

# Redmica configuration
REDMINE_DB_POSTGRES=postgres
REDMINE_DB_DATABASE=redmica
REDMINE_DB_USERNAME=postgres
REDMINE_DB_PASSWORD=__POSTGRES_PASSWORD__
REDMINE_SECRET_KEY_BASE=__REDMINE_SECRET_KEY_BASE__

# LDAP configuration
LDAP_DOMAIN=redstone.local
LDAP_ORGANISATION=Redstone Project
LDAP_ADMIN_PASSWORD=__LDAP_ADMIN_PASSWORD__
LDAP_CONFIG_PASSWORD=__LDAP_CONFIG_PASSWORD__
LDAP_TLS=false
LDAP_READONLY_USER=false
LDAP_REPLICATION=false
KEEP_EXISTING_CONFIG=false
LDAP_REMOVE_CONFIG_AFTER_SETUP=true
BOOTSTRAP=true

# Grafana configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=__GF_SECURITY_ADMIN_PASSWORD__
GF_USERS_ALLOW_SIGN_UP=false
GF_INSTALL_PLUGINS=grafana-piechart-panel

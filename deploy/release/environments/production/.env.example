# Production Environment Configuration
# Following the "Built for Clarity" design philosophy

# Environment
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false

# Service Ports
FRONTEND_PORT=8080
API_PORT=8081
REDMICA_PORT=3000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090
REDIS_PORT=6379

# Database Configuration
POSTGRES_PASSWORD=production_postgres_password_CHANGE_ME
POSTGRES_VERSION=15

# Service Versions
REDMICA_VERSION=3.1.7
NGINX_VERSION=1.25-alpine
REDIS_VERSION=7-alpine
GRAFANA_VERSION=9.5.2
PROMETHEUS_VERSION=v2.44.0

# API Configuration
API_DEBUG=false
API_SECRET_KEY=production_api_secret_key_CHANGE_ME

# Worker Configuration
WORKER_REPLICAS=3
WORKER_ID=prod-worker

# LDAP Configuration
LDAP_ADMIN_PASSWORD=production_ldap_admin_CHANGE_ME
LDAP_CONFIG_PASSWORD=production_ldap_config_CHANGE_ME

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=production_grafana_admin_CHANGE_ME

# Release.com Configuration
RELEASE_API_TOKEN=your_production_token_here
RELEASE_PROJECT_NAME=redstone-prod
RELEASE_ENVIRONMENT=production

# Security Settings (REQUIRED FOR PRODUCTION)
REDMICA_SECRET_KEY_BASE=production_secret_key_base_CHANGE_ME

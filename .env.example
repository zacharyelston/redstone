# Redstone Environment Configuration
# Following the "Built for Clarity" design philosophy

# Application settings
NODE_ENV=development
LOG_LEVEL=info

# API service configuration
API_PORT=3000
API_HOST=0.0.0.0
API_URL=http://localhost:3000

# Frontend configuration
FRONTEND_PORT=8080
FRONTEND_HOST=0.0.0.0
REACT_APP_API_URL=http://localhost:3000

# Database configuration
DATABASE_URL=postgres://postgres:postgres@db:5432/redstone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=redstone

# Redis configuration
REDIS_URL=redis://redis:6379

# Worker configuration
WORKER_CONCURRENCY=2

# Release.com specific settings
RELEASE_API_TOKEN=
RELEASE_PROJECT_NAME=redstone
RELEASE_ENVIRONMENT=development

# Security settings
JWT_SECRET=replace_with_secure_random_string
SESSION_SECRET=replace_with_secure_random_string

# Monitoring settings
ENABLE_MONITORING=false

# Feature flags
ENABLE_NEW_UI=false
ENABLE_ANALYTICS=false
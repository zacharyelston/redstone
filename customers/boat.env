# Boat Customer Deployment Configuration
# Zero-touch SaaS deployment for Boat

# Customer Information
CUSTOMER_NAME="Boat"
CUSTOMER_IDENTIFIER="boat"
CUSTOMER_DOMAIN="boat.redstone.com"

# Admin Configuration
ADMIN_EMAIL="admin@boat.com"
ADMIN_PASSWORD=""  # Leave empty to auto-generate secure password

# LDAP Configuration
LDAP_ENABLED=true
LDAP_DOMAIN="boat.local"
LDAP_BASE_DN="dc=boat,dc=local"

# Project Configuration
CREATE_DEMO_PROJECT=true
DEFAULT_PROJECT_VISIBILITY=false  # false = private, true = public

# Application Settings
APP_TITLE_SUFFIX="Project Management"  # Will become "Boat - Project Management"
DEFAULT_LANGUAGE="en"
TIMEZONE="UTC"

# Security Settings
FORCE_SSL=false
SESSION_TIMEOUT=60  # minutes
PASSWORD_MIN_LENGTH=8

# Email Configuration (optional)
SMTP_ENABLED=false
SMTP_HOST=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM_ADDRESS=""

# Feature Flags
ENABLE_REST_API=true
ENABLE_FEEDS=true
ENABLE_WS_FOR_ISSUES=true
ENABLE_GANTT=true
ENABLE_CALENDAR=true

# Storage Configuration
MAX_ATTACHMENT_SIZE=5120  # KB
ATTACHMENT_STORAGE_PATH="files"

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Custom Branding (optional)
CUSTOM_LOGO_URL=""
CUSTOM_FAVICON_URL=""
CUSTOM_CSS_URL=""

# Integration Settings
WEBHOOK_ENABLED=false
WEBHOOK_URL=""
SLACK_INTEGRATION=false
SLACK_WEBHOOK_URL=""

# Development/Testing Settings (set to false for production)
DEBUG_MODE=false
DEMO_DATA=true
SAMPLE_USERS=false
